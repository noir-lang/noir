{
  "release-type": "simple",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "prerelease": true,
  "pull-request-title-pattern": "chore(noir): Release ${version}",
  "group-pull-request-title-pattern": "chore(noir): Release ${version}",
  "packages": {
    ".": {
      "release-type": "simple",
      "component": "noir",
      "include-component-in-tag": false,
      "extra-files": [
        "Cargo.toml",
        "flake.nix",
        {
          "type": "json",
          "path": "compiler/wasm/package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "compiler/source-resolver/package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "tooling/noirc_abi_wasm/package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "compiler/integration-tests/package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "release-tests/package.json",
          "jsonpath": "$.version"
        }
      ]
    }
  },
  "plugins": ["sentence-case"]
}
