use std::mem::list_refcount;

fn main(i: u32) {
    let mut list: [Field] = &[0_Field, 1_Field, 2_Field];
    assert_refcount(list, 1_u32, true);
    borrow(list, list_refcount(list));
    borrow_mut(&mut list, list_refcount(list));
    let _: [Field] = copy_mut(list, list_refcount(list));
    borrow_mut_two(&mut list, &mut list, list_refcount(list));
    let mut u32_list: [u32] = &[0_u32, 1_u32, 2_u32];
    let rc1: u32 = list_refcount(list);
    let rc2: u32 = list_refcount(u32_list);
    borrow_mut_two_separate(&mut list, &mut u32_list, rc1, rc2);
    regression_7297();
    // Safety: comment added by `nargo expand`
    unsafe { regression_10335(i) };
}

fn borrow(list: [Field], rc_before_call: u32) {
    assert_refcount(list, rc_before_call, true);
    println(list[0_u32]);
}

fn borrow_mut(list: &mut [Field], rc_before_call: u32) {
    assert_refcount(*list, rc_before_call, true);
    list[0_u32] = 3_Field;
    println(list[0_u32]);
}

fn copy_mut(mut list: [Field], rc_before_call: u32) -> [Field] {
    assert_refcount(list, rc_before_call, true);
    list = &[4_Field, list[1_u32], list[2_u32]];
    println(list[0_u32]);
    list
}

fn borrow_mut_two(list1: &mut [Field], list2: &mut [Field], rc_before_call: u32) {
    assert_refcount(*list1, rc_before_call, true);
    assert_refcount(*list2, rc_before_call + 1_u32, true);
    list1[0_u32] = 5_Field;
    list2[0_u32] = 6_Field;
    println(list1[0_u32]);
    println(list2[0_u32]);
}

fn borrow_mut_two_separate(
    list1: &mut [Field],
    list2: &mut [u32],
    rc_before_call1: u32,
    rc_before_call2: u32,
) {
    assert_refcount(*list1, rc_before_call1, true);
    assert_refcount(*list2, rc_before_call2, true);
    list1[0_u32] = 7_Field;
    list2[0_u32] = 8_u32;
    println(list1[0_u32]);
    println(list2[0_u32]);
}

fn assert_refcount<T>(list: [T], mut expected: u32, expect_copy: bool) {
    let count: u32 = list_refcount(list);
    if expect_copy { expected = expected + 1_u32; };
    if std::runtime::is_unconstrained() {
        if count != expected {
            println(f"actual = {count}, expected = {expected}");
        };
        assert(count == expected);
    } else {
        assert(count == 0_u32);
    }
}

fn regression_7297() {
    let mut list: [Field] = &[0_Field, 1_Field, 2_Field];
    let refcount_0: u32 = list_refcount(list);
    borrow_mut_two(&mut list, &mut list, refcount_0);
    let refcount_1: u32 = list_refcount(list);
    let list_2: [Field] = copy_mut(list, refcount_1 + 1_u32);
    let refcount_2: u32 = list_refcount(list);
    assert(
        list[0_u32] == 6_Field,
        "the original should not be mutated by copy_mut, only borrow_mut_two",
    );
    assert(list_2[0_u32] == 4_Field, "the copy should have the expected content");
    if std::runtime::is_unconstrained() {
        assert(
            refcount_1 != 0_u32,
            "borrow_mut_two should create a fresh list and not decrease its RC",
        );
        assert(
            refcount_1 == 2_u32,
            "There is 1 clone after `borrow_mut_two` and before `refcount_1` is defined (cloned before list_refcount call)",
        );
        assert(
            refcount_2 == (refcount_1 + 3_u32),
            "after refcount_1 we clone once in passing list to copy_mut, once to list_refcount after, and once within copy_mut",
        );
    }
}

unconstrained fn regression_10335(i: u32) {
    let a: [Field] = &[0_Field, 1_Field, 2_Field];
    let mut b: [Field] = a;
    b[i] = 3_Field;
    let rc_a: u32 = list_refcount(a);
    let rc_b: u32 = list_refcount(b);
    assert(rc_a == 2_u32);
    assert(rc_b == 1_u32);
}
